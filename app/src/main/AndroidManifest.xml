<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chocano_pa1"
        tools:targetApi="31">

        <!-- OJO: los Fragment NO van como activity en el manifest; puedes borrarlos de aquÃ­ -->
        <!-- <activity android:name=".ui.acerca.AcercaFragment" ... /> -->
        <!-- <activity android:name=".ui.triangulo.TrianguloFragment" ... /> -->
        <!-- etc. -->

        <!-- 1) SPLASH como launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Chocano_pa1.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2) MAIN normal (sin launcher) -->
        <activity
            android:name=".MainActivity_principal"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Chocano_pa1" />
    </application>

</manifest>
